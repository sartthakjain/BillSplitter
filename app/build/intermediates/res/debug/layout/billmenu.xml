<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"

    android:background="@drawable/background"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
    android:weightSum="120"

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView android:text="BILL MENU"
        android:layout_width="match_parent"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="28"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <Button
            android:hapticFeedbackEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:onClick="onBackPressed2"
            android:text="back"
            android:textSize="20dp"
            android:layout_weight="50"
            android:background="#7085b893"

            android:clickable="true" />

        <Button
            android:hapticFeedbackEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:onClick="sendMessage3"
        android:text="NEXT"
            android:textSize="20dp"
            android:layout_weight="50"
            android:background="#7085b893"
            android:clickable="true" />
    </LinearLayout>


    <EditText
      android:paddingTop="40dp"
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/etpurp"
        android:paddingBottom="20dp"
        android:hint="Enter a description"/>
<LinearLayout
    android:layout_weight="40"
    android:weightSum="100"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rs"
        android:layout_weight="75"
        android:textSize="30dp"/>
    <EditText
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_weight="25"
        android:inputType="number|numberDecimal"
        android:id="@+id/etammount"
        android:layout_height="wrap_content"
        android:textSize="30dp"
         android:hint="0.00"/>

</LinearLayout>



    <LinearLayout
        android:paddingTop="30dp"

        android:layout_weight="40"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paid By"
            android:layout_weight="25"
            android:paddingBottom="20dp"
            android:textSize="35dp"/>




        <Button
            android:hapticFeedbackEnabled="true"
            android:background="#7085b893"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:textSize="20dp"

            android:id="@+id/bt1"
            android:onClick="sendMessage"

            android:text="who paid"/>


        <Button
            android:hapticFeedbackEnabled="true"
            android:background="#7085b893"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:onClick="sendMessage2"
            android:id="@+id/btsplit"
            android:textSize="20dp"
            android:text="how to split"/>




    </LinearLayout>


</LinearLayout>
    </ScrollView>
</LinearLayout>
